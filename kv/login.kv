<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 80, 50, 50]
        spacing: 25
        canvas.before:
            Color:
                rgba: 0.1, 0.15, 0.2, 1  # dark background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "IOT-BASED SMART LOCKER SECURITY SYSTEM"
            font_size: 34
            bold: True
            color: 1,1,1,1

        # Username input
        TextInput:
            id: username
            hint_text: "Username"
            multiline: False
            size_hint_y: None
            height: 50
            padding: [15,15]
            background_normal: ''
            background_active: ''
            background_color: 0.3,0.3,0.35,1
            foreground_color: 1,1,1,1
            cursor_color: 1,1,1,1
            font_size: 18

        # Password input
        TextInput:
            id: password
            hint_text: "Password"
            multiline: False
            password: True
            size_hint_y: None
            height: 50
            padding: [15,15]
            background_normal: ''
            background_active: ''
            background_color: 0.3,0.3,0.35,1
            foreground_color: 1,1,1,1
            cursor_color: 1,1,1,1
            font_size: 18

        # Error label
        Label:
            id: error
            color: 1,0.3,0.3,1
            text: ""
            font_size: 16

        # Login button
        Button:
            text: "Login"
            font_size: 20
            size_hint_y: None
            height: 50
            background_normal: ''
            background_color: 0.2, 0.6, 0.9, 1
            color: 1,1,1,1
            bold: True
            border: (12,12,12,12)
            on_release: root.validate_user()
